{
  "name": "reactoggles",
  "version": "1.0.0",
  "description": "Higher-order components for React to enable feature toggling of components",
  "main": "lib/reactoggles.js",
  "scripts": {
    "test": "jest",
    "test:ci": "jest",
    "transpile": "babel src --out-dir lib",
    "prepublish-to-npm": "supersoaker squirt -r https://registry.npmjs.org",
    "publish-to-npm": "publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/findmypast/reactoggles.git"
  },
  "keywords": [
    "toggle",
    "feature",
    "toggle",
    "react",
    "reactjs"
  ],
  "author": "Findmypast",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/findmypast/reactoggles/issues"
  },
  "homepage": "https://github.com/findmypast/reactoggles#readme",
  "dependencies": {
    "react": "^15.1.0",
    "react-display-name": "^0.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-jest": "^12.1.0",
    "babel-plugin-transform-class-properties": "^6.9.1",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "eslint": "^2.11.1",
    "eslint-config-eslint": "^3.0.0",
    "eslint-plugin-react": "^5.1.1",
    "jest-cli": "^12.1.1",
    "publish": "^0.6.0",
    "react-addons-test-utils": "^15.1.0",
    "react-dom": "^15.1.0",
    "supersoaker": "^1.0.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "ecmaVersion": 6,
        "classes": true,
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "plugins": [
      "react"
    ]
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react/",
      "<rootDir>/node_modules/react-dom/",
      "<rootDir>/node_modules/react-addons-test-utils/"
    ]
  }
}
